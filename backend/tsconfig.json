{
    "compilerOptions": {
      "target": "ES2022", // Ou uma versão mais recente como ESNext
      "module": "NodeNext", // Crucial para o TypeScript entender ES Modules no Node.js
      "moduleResolution": "NodeNext", // Diz ao TypeScript para resolver módulos como o Node.js 16+ faz
      "esModuleInterop": true, // Permite importações padrão de módulos CommonJS
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
       "outDir": "./dist", // Onde o TypeScript vai compilar seus arquivos JS
       "rootDir": "./src", // Onde seus arquivos TS estão
      "resolveJsonModule": true, // Para importar arquivos JSON se necessário
      "sourceMap": true, // Útil para depuração
      "declaration": true // Gera arquivos .d.ts para seus módulos
    },
    "include": [
      "src/**/*.ts" // Inclui todos os arquivos .ts
    ],
    "exclude": [
      "node_modules", // Exclui a pasta node_modules
      "dist"
    ]
  }